{
   "manifest_version": 3,
   "name": "4duk",
   "version": "0.4.2",
   "description": "Быстрокнопка 4duk",
   "icons": {
      "128": "icon.png"
   },
   "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "4duk"
   },
   "background": {
      "service_worker": "background.js",
      "type": "module"
   },
   "commands": {
      "toogle-playing": {
         "suggested_key": {
            "default": "Ctrl+Shift+4"
         },
         "description": "Вкл/Выкл",
         "global": true
      }
   },
   "homepage_url": "https://x4t3a.github.io/4duk/",
   "permissions": [
      "storage",
      "commands"
   ]
}